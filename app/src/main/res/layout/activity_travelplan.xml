<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/travelPlan_title"
        android:background="@color/journey_green"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:id="@+id/travlePlan_cancle"
            android:layout_marginLeft="8dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cancel_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新行程"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/travlePlan_right"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_right"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="8dp"
                    android:text="行程名:"
                    android:layout_marginRight="42dp"
                    android:textColor="@color/dark_green"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/travelPlan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:hint="为新行程取个名字吧"
                    app:met_primaryColor="@color/journey_green"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/dark_green"
                    app:met_errorColor="@color/red"
                    app:met_maxCharacters="20"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="8dp"
                    android:text="开始日期:"
                    android:textColor="@color/dark_green"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/travelPlan_time"
                    android:layout_marginLeft="16dp"
                    android:text="- - - -"
                    android:textColor="@color/dark_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="8dp"
                    android:text="旅游天数:"
                    android:layout_marginRight="32dp"
                    android:textColor="@color/dark_green"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/travelPlan_daycount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:hint="输入必须整数(单位天)"
                    app:met_primaryColor="@color/journey_green"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/dark_green"
                    app:met_errorColor="@color/red"
                    app:met_maxCharacters="20"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="8dp"
                    android:text="目的城市:"
                    android:textColor="@color/dark_green"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/travelPlan_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="32dp"
                    android:hint="城市名  "
                    android:layout_weight="1"
                    android:minWidth="20dp"
                    app:met_primaryColor="@color/journey_green"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/dark_green"
                    app:met_errorColor="@color/red"
                    app:met_maxCharacters="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_green"
                    android:text="市"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="8dp"
                    android:text="行程备注:"
                    android:layout_marginRight="32dp"
                    android:textColor="@color/dark_green"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/travelPlan_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:hint=""
                    app:met_primaryColor="@color/journey_green"
                    app:met_floatingLabel="normal"
                    app:met_baseColor="@color/dark_green"
                    app:met_errorColor="@color/red"
                    app:met_maxCharacters="20"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/travlePlan_datePicker_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <DatePicker
                android:id="@+id/travlePlan_datePicker"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxDate="01/01/2017"></DatePicker>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/travlePlan_yes"
                android:background="@color/journey_green"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/edituserinfo_publicButton"
            android:layout_alignParentBottom="true"
            android:background="@color/journey_green"
            android:gravity="center"
            android:layout_width="match_parent"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:text="创建"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>