<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/journey_green"
        android:layout_height="?android:attr/actionBarSize"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp">
            <ImageView
                android:id="@+id/new_dynamic_backicon"
                android:layout_marginLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="写动态"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.coderqiang.followme.View.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <EditText
                        android:background="@color/white"
                        android:id="@+id/new_dynamic_editText"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="140dp"
                        android:padding="8dp"
                        android:hint="说点什么吧..."
                        android:textSize="16sp"
                        android:gravity="top"
                        android:layout_marginBottom="54dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_below="@id/new_dynamic_editText"
                        android:id="@+id/new_dynamic_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="8dp"
                            android:text="地点"
                            android:textColor="@color/dark_green"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/new_dynamic_address"
                            android:padding="8dp"
                            android:text="北京人家剧院"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="8dp"
                            android:text="时间"
                            android:textColor="@color/dark_green"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/new_dynamic_time"
                            android:padding="8dp"
                            android:text="2016-7-8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="54dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.example.coderqiang.followme.View.MyScrollView>
        <Button
            android:id="@+id/new_dynamic_publicButton"
            android:layout_alignParentBottom="true"
            android:background="@color/journey_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:id="@+id/new_dynamic_progress_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@color/white"
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:background="@drawable/chat_edit_bg"/>
            <TextView
                android:text="发布中..."
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>