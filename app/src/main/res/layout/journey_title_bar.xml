<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journey_day_title_layout"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fff">
    <com.example.coderqiang.followme.CircleImagview
        android:id="@+id/user_touxiang"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/touxiang"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="#009393"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="我的行程"/>
    <LinearLayout
        android:id="@+id/journey_day_map_schedule_layout"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/journey_day_map_schedule_imagview"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_schedule_green_36dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/journey_day_map_schedule_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="日程" />
    </LinearLayout>


</LinearLayout>