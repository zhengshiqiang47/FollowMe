<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_edit_bg">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/china_ic_scenic"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热门城市"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:background="@color/black_3"
        android:layout_height="220dp">
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/china_banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>
        <ImageView
            android:id="@+id/china_hot_city_left_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="0.7"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left"/>
        <ImageView
            android:id="@+id/china_hot_city_right_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="0.7"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>