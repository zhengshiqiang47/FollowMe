<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scenic_detail_linearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray_light"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/scenic_detail_intro_left_line"/>
            <TextView
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:text="景区简介:"/>
        </LinearLayout>
        <TextView
            android:id="@+id/scenic_detail_intro_expand_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black_deep">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="3dp"
            android:layout_height="18sp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/scenic_detail_intro_left_line"/>
        <TextView
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="门票价格:"/>
    </LinearLayout>
    <TextView
        android:id="@+id/scenic_detail_item_price"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:textSize="15sp"
        android:background="@color/white"
        android:textColor="@color/black_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="8dp"
            android:layout_width="3dp"
            android:layout_height="18sp"
            android:layout_marginRight="4dp"
            android:src="@drawable/scenic_detail_intro_left_line"/>
        <TextView
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="开放时间:"/>

    </LinearLayout>
    <TextView
        android:id="@+id/scenic_detail_item_openTime"
        android:textColor="@color/black_3"
        android:background="@color/white"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="8dp"
            android:layout_width="3dp"
            android:layout_height="18sp"
            android:layout_marginRight="4dp"
            android:src="@drawable/scenic_detail_intro_left_line"
            android:id="@+id/imageView2" />

        <TextView
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="时间花费:"/>
        <TextView
            android:id="@+id/scenic_detail_item_counttime"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="8dp"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:src="@drawable/scenic_detail_intro_left_line"/>
            <TextView
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:text="道路交通:"/>
        </LinearLayout>
        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:id="@+id/scenic_detail_traffic_expand_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:maxCollapsedLines="8"
            expandableTextView:animAlphaStart="1"
            expandableTextView:animDuration="400">
            <TextView
                android:id="@id/expandable_text"
                android:layout_marginLeft="8dp"
                android:textSize="15sp"
                android:textColor="@color/black_deep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:src="@drawable/arrow_up"
                android:background="@android:color/transparent" />
        </com.ms.square.android.expandabletextview.ExpandableTextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="8dp"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/scenic_detail_intro_left_line"
            android:id="@+id/imageView2" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/thumb"/>
        <TextView
            android:id="@+id/scenic_detail_item_counttime"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/scenic_detail_album_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>