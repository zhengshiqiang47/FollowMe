<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/scenic_recycler_linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingLeft="12dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/scenic_item_name_tv"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginRight="8dp"
                    android:text="景点名称"/>
                <TextView
                    android:id="@+id/scenic_item_short_tv"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:text="景区介绍"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/scenic_recycler_item_img"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dog_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:divider="@drawable/divider_line_hor"
            android:showDividers="middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/scenic_recycler_detailTv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="详情"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="不感兴趣"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
