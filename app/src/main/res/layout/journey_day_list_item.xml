<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/journey_day_normal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/geometry_cut_mini"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/day_divider_line"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/journey_day_day"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/journey_green"
                    android:text="Day 1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="#FAFAFA"/>
                <ImageView
                    android:src="@drawable/strangle"
                    android:layout_width="20dp"
                    android:layout_height="30dp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/journey_day_city"
                android:background="@drawable/circle"
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="巴黎" />
            <EditText
                android:layout_marginLeft="8dp"
                android:background="@drawable/chat_edit_bg"
                android:id="@+id/journey_day_detail"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/journey_green"
                android:layout_height="wrap_content"
                android:hint="备注"
                android:textColorHint="@color/gray"/>
            <ImageView
                android:id="@+id/journey_day_weather"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@mipmap/qincloud"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/journey_day_normal_recycler"
        android:background="@drawable/geometry_cut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/journey_day_normal"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
